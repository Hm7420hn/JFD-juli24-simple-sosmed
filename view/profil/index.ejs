
<%- include('../template/head-start') %>
<%- include('../template/menu-atas') %>

<div class="btn btn-primary pt-3">
    <div class="row d-flex justify-content-center">
        <h1>Halaman Profil</h1>
            <div class="card mt-3 mb-3">
                <div class="row g-0">
                <div class="col-md-4">
                    <img src="/gambar/user-default.jpeg" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <a href="/profil/edit" class="btn btn-premary float-end" >
                            <i class="fa-solid fa-edit"></i>
                        </a>
                    <h5 class="card-text"><%= req.session.user[0].nama_lengkap %></h5>
                        <p class="card-text">
                            <%= req.session.user[0].username %>
                        </p>
                    <h5 class="card-title">Bio</h5>
                        <p class="card-text">
                            <%= req.session.user[0].bio %>
                        </p>
                        <p class="card-text">
                            <small class="text-body-secondary">Last updated: <%= moment(req.session.user[0].Last_update).format('DD MM YYYY HH:MM') %></small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('../template/head-end') %>